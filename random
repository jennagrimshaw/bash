# Copy files with a gz extension from all subdirectories to a new location
cp **/*.gz <new location>

# Adds extension to a list
for name in $(cat <directory>/list.txt); do echo $name.fa; done

# Copy files from list adding extension
for name in $(cat /<directory>/list.txt); do cp ${name}_rm.bed /<directory>/bedfiles/.; done

# TO USE SED ON MAC you must use dumb empty single quotes
 sed -i '' "s|oldstring|newstring|g" oldfiles.txt 
 
 # To delete ALL LINES THAT CONTAIN A STRING ON MAC
  sed -i ' ' "/usda=fastimcoal=USDA=boots=old=/d" oldfiles.txt
